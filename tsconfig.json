{
	"compilerOptions": {
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es6",
		"declaration": true,
		"outDir": "./dist",
		"skipLibCheck": true,
		"jsx": "react",
		"typeRoots": ["node_modules/@types", "local-types"],
		"allowSyntheticDefaultImports": true,
		"lib": ["es2015", "dom"]
	},
	"exclude": ["node_modules"],
	"include": ["./src/**/*"]
}
